<header>Busqueda de Preguntas</header>
<section>
	<ul class="link_question">
		<% var i; for(i=0; i < quizes.length; i++) { %>
			<li>
				<a class="question" href="../quizes/<%= quizes[i].id %>"><%= quizes[i].pregunta %></a>
				<div class="question_actions">
					<a href="../quizes/<%= quizes[i].id %>/edit"><button>Editar</button></a>
					<form method="post" action="../quizes/<%= quizes[i].id %>?_method=delete"><button type="submit" onClick="return confirm('Borrar: <%= quizes[i].pregunta %>');">Borrar</button></form>
				</div>
			</li>
		<% } %>
	</ul>
	<p></p>
	<a class="link_back" href="/quizes">Atras</a>
</section>